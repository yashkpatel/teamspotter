<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/userprofile_top"
        android:padding="15dp">
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/userprofile_img"
            android:src="@mipmap/ic_img_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/userprofile_id"
            android:gravity="center"
            android:text="ykp"
            android:textStyle="bold"
            android:textSize="30dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userprofile_layout_name"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_below="@+id/userprofile_top">
  <TextView
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:text="Name  "
      android:textStyle="bold"
      android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userprofile_textView_name"
            android:textSize="20dp"
            android:text="Yash Patel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userprofile_layout_gender"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_below="@+id/userprofile_layout_name">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Gender  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userprofile_textView_gender"
            android:textSize="20dp"
            android:text="Male"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userprofile_layout_location"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_below="@+id/userprofile_layout_gender">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Location  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userprofile_textView_location"
            android:textSize="20dp"
            android:text="Thaltej"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userprofile_layout_sport"
        android:orientation="horizontal"
        android:padding="15dp"
        android:layout_below="@+id/userprofile_layout_location">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sport  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userprofile_textView_sport"
            android:textSize="20dp"
            android:text="Cricket"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:id="@+id/userprofile_view"
        android:layout_below="@+id/userprofile_layout_sport"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:id="@+id/userprofile_layout_avg"
        android:layout_below="@+id/userprofile_view">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Avg Rating"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textSize="20dp"
            android:id="@+id/userprofile_textView_avg"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/userprofile_layout_rate"
        android:padding="10dp"
        android:layout_below="@id/userprofile_layout_avg"
        android:weightSum="1">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:clickable="true" />
    </LinearLayout>






</RelativeLayout>