<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp"
    android:padding="1dp"

    >

    <LinearLayout
        android:id="@+id/username"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="5dp"
        >
        <ImageView
            android:id="@+id/img_user"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:src="@mipmap/ic_img_user"
            />
        <TextView
            android:text="Tejas"
            android:id="@+id/txt_user"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="left|center"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:lines="1"

            />
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@+id/username"
        />

    <LinearLayout
        android:id="@+id/content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/username"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        >


        <ImageView
            android:id="@+id/sportimg2"
            android:layout_height="90dp"
            android:layout_width="90dp"

            android:src="@mipmap/ic_img_icon"
            />
        <TextView
            android:id="@+id/txt_game"
            android:text="CRICKet"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_height="match_parent"
            android:layout_width="180dp"

            android:gravity="top"
            android:layout_marginLeft="15dp"

            />

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/need"
            android:text="22"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players Needed"
                android:textStyle="bold"
                android:layout_below="@id/need"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/content"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:weightSum="4"
        >

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_eventdate"
                android:text="Event Date"
                android:textStyle="bold"
                android:gravity="center"/>
        <TextView

            android:text="MAY 15"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_below="@+id/tv_eventdate"
            />


        </RelativeLayout>
        <Button
            android:id="@+id/accept"
            android:background="@drawable/btnshape"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="ACCEPTED"
            android:layout_gravity="right"

            android:textColor="#4CAF50"
            />

    </LinearLayout>




</RelativeLayout>